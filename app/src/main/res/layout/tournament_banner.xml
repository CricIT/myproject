<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_group_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tour_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle"
        android:fontFamily="@font/roboto"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:drawableEnd="@drawable/edit_pen"
        android:drawablePadding="8dp"
        android:hint="Tournament Name"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableRight="@drawable/edit_pen" />

    <ImageView
        android:id="@+id/btn_add_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/banner_overlay"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_banner"
        app:layout_constraintEnd_toEndOf="@+id/iv_group_banner"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/iv_group_banner"
        app:layout_constraintTop_toTopOf="@+id/iv_group_banner" />




</android.support.constraint.ConstraintLayout>




