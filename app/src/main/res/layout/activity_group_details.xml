<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="133dp"
            android:layout_height="178dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/group_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_group_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_group_details_location"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_loc_current"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_loc_current"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_name" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto"
            android:text="Info: "
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_location"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_location" />

        <TextView
            android:id="@+id/tv_group_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_group_details_total_members"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/eclipse_purple"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_description" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="Members"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_total_members"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_total_members" />

        <TextView
            android:id="@+id/tv_group_details_availale_members"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/eclipse_green"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/tv_group_details_total_members"
            app:layout_constraintTop_toTopOf="@+id/tv_group_details_total_members" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Available"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_availale_members"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_availale_members" />

        <TextView
            android:id="@+id/tv_group_details_unavailable_members"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/eclipse_orange_group"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/tv_group_details_availale_members"
            app:layout_constraintTop_toTopOf="@+id/tv_group_details_availale_members" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="Unavailable"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_group_details_unavailable_members"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_details_unavailable_members" />

        <TextView
            android:id="@+id/teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="Teams"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <LinearLayout
            android:id="@+id/team_one"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_rectangle"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/teams"
            app:layout_constraintTop_toBottomOf="@+id/teams">


            <TextView
                android:id="@+id/tv_group_details_team1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/green_border_png"
                android:fontFamily="@font/roboto"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_group_details_team1_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_rect_lightgreen_low"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_team_two"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/white_rectangle"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/team_one"
            app:layout_constraintTop_toTopOf="@+id/team_one">


            <TextView
                android:id="@+id/tv_group_details_team2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/purple_border_png"
                android:fontFamily="@font/roboto"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_group_details_team2_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_rect_purple_low"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_more"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/dotted_lightgray_rect"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/l_team_two"
            app:layout_constraintTop_toTopOf="@+id/l_team_two">


            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:src="@drawable/gray_plus"
                android:text="Team Two"
                android:textColor="@color/purple"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_group_details_more_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="Members"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/teams"
            app:layout_constraintTop_toBottomOf="@+id/team_one" />

        <Button
            android:id="@+id/btn_group_details_add_memebers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/dotted_lightgreen_rect"
            android:drawableLeft="@drawable/green_plus_btn"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/green_plus_btn"
            android:fontFamily="@font/roboto"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="Add Memebers"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/members"
            app:layout_constraintTop_toBottomOf="@+id/members" />

        <TextView
            android:id="@+id/tv_group_details_join_request_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/eclipse_pink"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_group_details_join_requests"
            app:layout_constraintEnd_toEndOf="@+id/btn_group_details_join_requests"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn_group_details_join_requests"
            app:layout_constraintTop_toTopOf="@+id/btn_group_details_join_requests"
            android:layout_marginLeft="8dp" />


        <Button
            android:id="@+id/btn_group_details_join_requests"
            android:layout_width="156dp"
            android:layout_height="46dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/dotted_blue_rect"
            android:drawableLeft="@drawable/join_request_png"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/join_request_png"
            android:fontFamily="@font/roboto"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="Join Requests"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_group_details_add_memebers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_group_details_add_memebers"
            app:layout_constraintTop_toTopOf="@+id/btn_group_details_add_memebers"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_group_details_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_group_details_add_memebers">

        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>
</ScrollView>




