<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_tour_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="0dp"
    android:layout_marginBottom="10dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/layout_tournament_reycler_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tour_list_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_tournament_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruler Rides"
                android:textColor="@color/tour_list_light_gray"
                android:textSize="15sp"
                 />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                app:srcCompat="@drawable/ic_star" />

            <LinearLayout
                android:id="@+id/tour_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tournament_name"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tournament_start_date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_rect_pink"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp"
                app:fontFamily="@font/roboto"/>

            <View
                android:id="@+id/dash"
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_path_pink" />

                <TextView
                    android:id="@+id/tournament_end_date"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/rounded_rect_pink"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/roboto" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tour_ground_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tour_dates"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/entry_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_radio_small"
                    android:drawableLeft="@drawable/ic_radio_small"
                    android:drawablePadding="4dp"
                    android:text="Entry Fee"
                    android:textColor="@color/tour_list_light_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/prize_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_radio_small"
                    android:drawableLeft="@drawable/ic_radio_small"
                    android:drawablePadding="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="Prize"
                    android:textColor="@color/tour_list_light_gray"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tournament_ground_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_radio_small"
                    android:drawableLeft="@drawable/ic_radio_small"
                    android:drawablePadding="4dp"
                    android:text="Location"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/tour_list_light_gray"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/btn_join_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tour_dates"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_rect_lightgreen"
                android:gravity="center"
                android:text="@string/join"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:fontFamily="@font/roboto" />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
