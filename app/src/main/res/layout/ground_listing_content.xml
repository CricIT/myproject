<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    android:background="#F2F2F3">

    <LinearLayout
        android:id="@+id/sel_gnd_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_ascending_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.1"
            android:background="@drawable/rect_light_small"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="1"
            android:textColor="#939393"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_ground_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="0.5"
            android:src="@drawable/ground_img" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ground_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Embassy Sports Zone"
                android:textColor="#878787"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ground_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_loc_current"
                android:drawableLeft="@drawable/ic_loc_current"
                android:drawablePadding="5dp"
                android:text="Hebbal"
                android:textColor="#878787"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_gold" />

            <TextView
                android:id="@+id/tv_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_gray_rect_border_only"
                android:fontFamily="@font/roboto"
                android:text="4"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
